{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Home{% endblock %}

{% block body %}

    {% if not app.user %}
        <div id="title-img">
            <a href="{{ path('app_login') }}">
                <img class="mainimg" src="{{ asset('img/logo-GO.png') }}" alt="Logo Go Out">
            </a>
        </div>

        <h1 class="headmess"> Wanna Go Out ? </h1>
    {% elseif not app.user.active %}
        <h1 class="headmess"> Sorry, your account has been deactivated</h1>
        <h1 class="headmess">Please contact the <a href="mailto:admin@sortir.com">admin</a></h1>
    {% else %}
        <h3>Event filters</h3>
        <section>
            <label>Campus</label>
            <select id="campusNames">
            </select>

            <div>
                <label>Search by words</label>
                <input type="search" >
            </div>

            <div>
                <label>From</label>
                <input type="date">
                <label>To</label>
                <input type="date">
            </div>

            <div>
                <label>Events where I am Organiser</label>
                <input type="checkbox">
                <label>Events I am subscribed to</label>
                <input type="checkbox">
                <label>Events I am not subscribed to</label>
                <input type="checkbox">
                <label>Past events</label>
                <input type="checkbox">
            </div>

            <button id="searchButton">Search</button>
        </section>
        <h1> Still wanna Go Out {{ app.user.pseudo }} ? </h1>
        {% for event in allEvents %}
            <ul id="events-board">
                <li onclick="window.location.href=`{{ path('goOut_details', {'id': event.id}) }}`" class="flex-container">
                    <div>
                        <div class="flex-container row">
                            <h2>{{ event.name }}</h2>
                            <p>The {{ event.startDate|date('d/m/Y') }} at {{ event.startDate|date('h:i') }} </p>
                            <p>
                                {% if app.user.admin %}
                                    <a href="{{ path('admin_managePrivileges', {'id': event.organiser.id}) }}">{{ event.organiser.pseudo }}</a>
                                {% else %}
                                    {{ event.organiser.pseudo }}
                                {% endif %}
                            </p>
                            <p>{{ event.status.label }}</p>
                        </div>
                    </div><!--
                    --><div>
                        <div class="flex-container row">
                            <div>
                                <p>Subscriptions ends the {{ event.limitSubDate|date('d/m/Y') }} at {{ event.limitSubDate|date('h:i') }}</p>
                                <p>Avalaibles places : {{ event.users|length }} / {{ event.maxSub }}</p>
                            </div>

                            <p>

                                {# Check if the current user is the organiser #}
                                {% if app.user.pseudo != event.organiser.pseudo and event.limitSubDate <= date() %}
                                    {% if event in eventsCurrentUser %}
                                        <a href="{{ path('goOut_leave', {'id': event.id}) }}">Unsubscribe</a>
                                    {% else %}
                                        <a href="{{ path('goOut_participate', {'id': event.id}) }}">Subscribe</a>
                                    {% endif %}
                                {% else %}
                                    {% if event.status.id == 2 %}
                                        <a href="{{ path('goOut_modify', {'id' : event.id}) }}">Modify</a>
                                        <a href="{{ path('goOut_cancel', {'id': event.id}) }}">Cancel</a>
                                    {% elseif event.status.id == 6 %}
                                        <a href="{{ path('goOut_modify', {'id' : event.id}) }}">Modify and Republish</a>
                                    {% else %}
                                        <a href="{{ path('goOut_modify', {'id' : event.id}) }}">Publish</a>
                                    {% endif %}
                                {% endif %}

                            </p>
                        </div>
                    </div>
                </li>
            </ul>
        {% endfor %}
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>

    function initCampusNames(){
    //json response
    fetch("{{app_url_api}}/campus", {method:"GET"})
        .then(response => response.json())
        .then(response =>{
            console.log(response);
            let option = ""
            response.map(campusName =>{
                option += `<option value="${campusName.id}">${campusName.name}</option>`
            })
            console.log(option);
            document.querySelector("#campusNames").innerHTML= option;
        })
        .catch(e=>(alert("ERROR : no options")))
}


        window.onload = () => {
            initCampusNames();
        }
    </script>
{% endblock %}