{% extends 'base.html.twig' %}

{% block body %}
    {% if not app.user or app.user.admin %}
        {{ include('inc/register.html.twig') }}
    {% else %}
        {{ include('inc/edit.html.twig') }}
    {% endif %}
{% endblock %}

{% block title %}
    {% if app.user %}
        {{ parent() }} | Edit
    {% else %}
        {{ parent() }} | Register
    {% endif %}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/forms.css') }}">
    <link rel="stylesheet" href="{{ asset('css/events.css') }}">
    <link rel="stylesheet" href="{{ asset('css/profils.css') }}">
{% endblock %}