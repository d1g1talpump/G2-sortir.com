{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Log in{% endblock %}

{% block body %}

                <form id="signin" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 id="signInTxt" class="h3 mb-3 font-weight-normal">Sign In</h1>
                    <label class="signin-lbl" for="inputEmail">e-Mail</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           autocomplete="email" required autofocus>
                    <label class="signin-lbl" for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
                           required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="checkbox-rmmbr">
                        <label>Remember Me
                            <input id="rememberMe" type="checkbox" name="_remember_me">
                        </label>
                    </div>


                    <button class="btn btn-lg btn-primary signin-btn" type="submit">
                        Sign in
                    </button>
                </form>
                <div class="register-forgot">
                    <a href="{{ path('profile_manage') }}" onclick=modalRegister()>New User?</a>
                    <div id="modalRegisterForm">
                        <div>
                            <h1>Register</h1>

                            {#  {{ form_start(manageProfileForm) }}
                            {{ form_widget(manageProfileForm) }}#}
                            <div>
                                <p style="background-color: #88B04B">My Photo {# TODO upload photo function #}</p>
                            </div>

                            <button type="submit" class="btn">Register</button>
                            <button type="button" class="btn">
                                <a href="{{ path('main_home') }}" onclick=modalRegister()>Cancel</a>
                            </button>
                            {#  {{ form_end(manageProfileForm) }} #}
                        </div>
                    </div>
                    <a href="{{ path('app_forgot_password_request') }}">Forgot Your Password?</a>
                </div>


{% endblock %}
